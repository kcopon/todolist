<%= content_tag :div, class: 'media', id: "item-#{item.id}" do %>
  <div class="media-left">
  </div>
  <div class="media-body">
    <small>
      <% if policy(item).destroy? %>
        <%= link_to "Delete", [item], method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
      <% end %>
    </small>
    <p><%= item.name %></p>
    <small>
      <p><%= item.days_left %> days left </p>
    </small>
    
  </div>
<% end %>


      